<Window x:Class="ConvertCurrencyToWords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Convert Currency To Words" 
        Height="200" 
        Width="420">
    <StackPanel Margin="6,6,6,6" Background="#A4E8E8E8">
        <TextBlock TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   Text="Enter a Number to have it Converted to Words." FontSize="14" />
        <TextBox x:Name="txtboxNumber" 
                 Width="150" 
                 MaxLength="15" 
                 Margin="10" 
                 PreviewTextInput="PreviewTextInput"/>
        <Button  Name="btnConvert" 
                 Height="30" 
                 Width="80" 
                 Click="BtnConvert_Click" 
                 Background="#FF8FDAFF" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Stretch">Convert</Button>
        <TextBox Name="txtblkWords" 
                 TextWrapping="Wrap" 
                 Margin="5"  
                 IsReadOnly="True"  />
    </StackPanel>
</Window>